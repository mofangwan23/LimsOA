<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/nmsLayoutMeetingSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_28"
        android:layout_marginTop="@dimen/mdp_8"
        android:layout_marginBottom="@dimen/mdp_8"
        android:layout_marginLeft="@dimen/mdp_15"
        android:layout_marginRight="@dimen/mdp_15"
        android:layout_below="@id/toolBar"
        android:background="@drawable/core_search_edittext">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/core_icon_search"
            android:drawablePadding="@dimen/mdp_8"
            android:text="搜索你想要的内容"
            android:textColor="@color/core_standard_second_text_color"
            android:textSize="@dimen/msp_14"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/nmsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_42"
        android:layout_marginLeft="@dimen/mdp_30"
        android:layout_marginRight="@dimen/mdp_30"
        android:layout_centerHorizontal="true"
        app:tabSelectedTextColor="@color/core_default_accent_color"
        app:tabTextAppearance="@style/NMSTabLayoutStyle"
        app:tabTextColor="#9B9B9B">
    </android.support.design.widget.TabLayout>

    <View style="@style/CoreSplitLine"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/nmsViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F6F6">
    </android.support.v4.view.ViewPager>

</LinearLayout>