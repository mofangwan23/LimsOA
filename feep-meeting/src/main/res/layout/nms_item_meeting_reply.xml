<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nmsIvAvatar"
        android:layout_width="@dimen/mdp_30"
        android:layout_height="@dimen/mdp_30"
        android:layout_marginTop="@dimen/mdp_12"
        android:layout_marginLeft="@dimen/mdp_16"
        android:layout_marginRight="@dimen/mdp_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_12"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nmsTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7F7F7F"
            android:textSize="@dimen/msp_14"/>

        <TextView
            android:id="@+id/nmsTvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:paddingRight="@dimen/mdp_16"
            android:textColor="#191919"
            android:textSize="@dimen/msp_16"/>

        <cn.flyrise.feep.meeting7.ui.component.AttachmentLayout
            android:id="@+id/nmsAttachmentsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:layout_marginRight="@dimen/mdp_16">
        </cn.flyrise.feep.meeting7.ui.component.AttachmentLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:layout_marginRight="@dimen/mdp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nmsTvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#7F7F7F"
                android:textSize="@dimen/msp_12"/>

            <ImageView
                android:id="@+id/nmsIvReply"
                android:layout_width="@dimen/mdp_16"
                android:layout_height="@dimen/mdp_16"
                android:src="@mipmap/nms_ic_meeting_reply"/>

        </LinearLayout>

        <cn.flyrise.feep.meeting7.ui.component.SubReplyLayout
            android:id="@+id/nmsLayoutSubReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:layout_marginRight="@dimen/mdp_16"
            android:orientation="vertical">
        </cn.flyrise.feep.meeting7.ui.component.SubReplyLayout>

        <View
            style="@style/CoreSplitLine"
            android:layout_marginTop="@dimen/mdp_12"/>

    </LinearLayout>

</LinearLayout>