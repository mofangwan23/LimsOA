<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nmsIvIcon"
            android:layout_width="@dimen/mdp_40"
            android:layout_height="@dimen/mdp_40"
            android:layout_marginTop="@dimen/mdp_10"
            android:layout_marginBottom="@dimen/mdp_10"
            android:layout_marginLeft="@dimen/mdp_16"
            android:layout_marginRight="@dimen/mdp_10"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nmsTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#04121A"
                android:textSize="@dimen/msp_14"/>

            <TextView
                android:id="@+id/nmsTvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_4"
                android:gravity="right"
                android:textColor="#FF9DA3A6"
                android:textSize="@dimen/msp_12"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/nmsIvX"
            android:layout_width="@dimen/mdp_36"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/mdp_10"
            android:padding="@dimen/mdp_10"
            android:src="@mipmap/nms_ic_x"/>
    </LinearLayout>

    <View style="@style/CoreSplitLine"/>

</LinearLayout>

