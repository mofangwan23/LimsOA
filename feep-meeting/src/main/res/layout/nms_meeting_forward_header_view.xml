<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mdp_80">

    <TextView
        android:id="@+id/nmsTvRefreshStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/nmsProgressBar"
        android:layout_width="@dimen/mdp_24"
        android:layout_height="@dimen/mdp_24"
        android:layout_marginRight="@dimen/mdp_12"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/nmsTvRefreshStatus"
        android:visibility="visible"/>


</RelativeLayout>