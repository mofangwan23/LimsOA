<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_40">
        <TextView
            style="@style/NMSMeetingItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_centerInParent="true"
            android:text="参会统计"/>

        <ImageView
            android:id="@+id/nmsIvX"
            android:layout_width="@dimen/mdp_48"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/mdp_8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/mdp_16"
            android:src="@mipmap/nms_ic_x"/>
    </RelativeLayout>

    <View style="@style/CoreSplitLine"/>

    <LinearLayout
        android:id="@+id/nmsLayoutUntreated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/msp_12"
        android:paddingBottom="@dimen/mdp_12"
        android:paddingLeft="@dimen/mdp_16"
        android:paddingRight="@dimen/mdp_16"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nmsIvUntreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_10"/>

        <TextView
            android:id="@+id/nmsTvUntreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF17191A"
            android:textSize="@dimen/msp_14"/>
    </LinearLayout>

    <View style="@style/CoreSplitLine"/>

    <LinearLayout
        android:id="@+id/nmsLayoutNotAttend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/msp_12"
        android:paddingBottom="@dimen/mdp_12"
        android:paddingLeft="@dimen/mdp_16"
        android:paddingRight="@dimen/mdp_16"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nmsIvNotAttend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_10"/>

        <TextView
            android:id="@+id/nmsTvNotAttend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF17191A"
            android:textSize="@dimen/msp_14"/>
    </LinearLayout>

    <View style="@style/CoreSplitLine"/>

    <LinearLayout
        android:id="@+id/nmsLayoutAttend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/msp_12"
        android:paddingBottom="@dimen/mdp_12"
        android:paddingLeft="@dimen/mdp_16"
        android:paddingRight="@dimen/mdp_16"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nmsIvAttend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_10"/>

        <TextView
            android:id="@+id/nmsTvAttend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF17191A"
            android:textSize="@dimen/msp_14"/>
    </LinearLayout>
</LinearLayout>