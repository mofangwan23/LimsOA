<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mdp_8"
    android:paddingBottom="@dimen/mdp_8"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nmsIvUserIcon"
        android:layout_width="@dimen/mdp_35"
        android:layout_height="@dimen/mdp_35"/>

    <TextView
        android:id="@+id/nmsTvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_4"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#898989"
        android:textSize="@dimen/msp_13"/>

</LinearLayout>