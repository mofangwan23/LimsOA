<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_40">
        <TextView
            android:id="@+id/nmsTvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/mdp_12"
            android:text="取消"
            android:textColor="@color/core_default_accent_color"/>

        <TextView
            style="@style/NMSMeetingItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_centerInParent="true"
            android:text="选择开会时间"/>

        <TextView
            android:id="@+id/nmsTvCreateMeeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/mdp_12"
            android:text="创建会议"
            android:textColor="@color/core_default_accent_color"/>
    </RelativeLayout>

    <View style="@style/CoreSplitLine"/>

    <LinearLayout
        android:id="@+id/nmsLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/msp_12"
        android:paddingBottom="@dimen/mdp_12"
        android:paddingLeft="@dimen/mdp_16"
        android:paddingRight="@dimen/mdp_16"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nmsIv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_10"/>

        <TextView
            android:id="@+id/nmsTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF17191A"
            android:textSize="@dimen/msp_14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nmsLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <View style="@style/CoreSplitLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msp_12"
            android:paddingBottom="@dimen/mdp_12"
            android:paddingLeft="@dimen/mdp_16"
            android:paddingRight="@dimen/mdp_16"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nmsIv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_10"/>

            <TextView
                android:id="@+id/nmsTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF17191A"
                android:textSize="@dimen/msp_14"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nmsLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <View style="@style/CoreSplitLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msp_12"
            android:paddingBottom="@dimen/mdp_12"
            android:paddingLeft="@dimen/mdp_16"
            android:paddingRight="@dimen/mdp_16"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nmsIv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_10"/>

            <TextView
                android:id="@+id/nmsTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF17191A"
                android:textSize="@dimen/msp_14"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>