<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/nmsMonthSplitLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_12"
        android:background="#F0F0F0"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nmsTvMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_8"
        android:paddingBottom="@dimen/mdp_8"
        android:gravity="center"
        android:textSize="@dimen/msp_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_2"
        android:background="#E4E6E7"/>
</LinearLayout>

