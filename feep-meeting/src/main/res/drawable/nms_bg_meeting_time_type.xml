<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/core_default_accent_color"/>
            <corners android:radius="@dimen/mdp_2"/>
            <stroke android:color="@color/core_default_accent_color" android:width="@dimen/mdp_1"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="@dimen/mdp_2"/>
            <stroke android:color="@color/nms_meeting_text_off" android:width="@dimen/mdp_1"/>
        </shape>
    </item>
</selector>