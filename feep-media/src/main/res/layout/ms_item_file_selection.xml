<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/msIvFileIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ms_icon_thumbnail_dir"/>

    <CheckBox
        android:id="@+id/msFileCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/checkbox_blue_selected"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:textColor="#303030"/>

    <TextView
        android:id="@+id/msTvFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/msFileCheckBox"
        android:layout_toRightOf="@id/msIvFileIcon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Hello World"
        android:textColor="#303030"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/msIvFileIcon"
        android:background="#ededed"/>

</RelativeLayout>