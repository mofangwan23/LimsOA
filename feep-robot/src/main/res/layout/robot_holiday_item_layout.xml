<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="@dimen/mdp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/robot_holiday_item_icon"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/mdp_12"
        android:paddingRight="@dimen/mdp_12">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/mdp_6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/holiday_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="国庆节"
                android:textColor="@color/login_btn_defulit"
                android:textSize="@dimen/msp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mdp_3"
                android:layout_toLeftOf="@+id/duration_layout"
                android:layout_toRightOf="@+id/holiday_name"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/holiday_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期："
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/msp_12" />

                <TextView
                    android:id="@+id/holiday_time_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-10-01至2018-10-07"
                    android:textColor="@color/login_btn_defulit"
                    android:textSize="@dimen/msp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/duration_layout"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mdp_6"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长："
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/msp_12" />

                <TextView
                    android:id="@+id/holiday_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@color/login_btn_defulit"
                    android:textSize="@dimen/msp_12" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/holiday_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/mdp_8"
            android:text="10月1日至7日放假调休，共7天。9月29日（星期六）、9月30日（星期日）上班。"
            android:textColor="@color/text_dark_color"
            android:textSize="11sp" />
    </LinearLayout>

    <View
        android:id="@+id/robot_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_2"
        android:layout_marginTop="@dimen/mdp_4"
        android:background="@color/text_bright_color" />
</LinearLayout>