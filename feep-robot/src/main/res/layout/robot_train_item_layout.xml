<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_background_color"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mdp_10"
    android:paddingRight="@dimen/mdp_10"
    android:paddingTop="@dimen/mdp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_btn_defulit"
                android:textSize="@dimen/msp_12" />

            <TextView
                android:id="@+id/start_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_time"
                android:layout_marginTop="10dp"
                android:text="广州南"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/msp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mdp_10"
                android:text="4小时19分"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/msp_12" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="6dp"
                android:layout_below="@+id/all_time"
                android:layout_centerHorizontal="true"
                android:background="@drawable/robot_train_icon" />

            <TextView
                android:id="@+id/train_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_centerHorizontal="true"
                android:text="G276"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/msp_12" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="11:06"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/msp_12" />

            <TextView
                android:id="@+id/end_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/end_time"
                android:layout_marginTop="10dp"
                android:text="武汉"
                android:textColor="@color/text_dark_color"
                android:textSize="@dimen/msp_14" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lower_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二等座500块"
            android:textColor="@color/red_error"
            android:textSize="@dimen/msp_10" />

        <TextView
            android:id="@+id/secondary_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="一等座700块"
            android:textColor="@color/red_error"
            android:textSize="@dimen/msp_10" />

        <TextView
            android:id="@+id/super_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="商务座1200块"
            android:textColor="@color/red_error"
            android:textSize="@dimen/msp_10" />
    </RelativeLayout>

    <View
        android:id="@+id/robot_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_2"
        android:layout_marginTop="@dimen/mdp_10"
        android:background="@color/text_bright_color" />
</LinearLayout>