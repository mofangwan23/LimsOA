<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/mdp_56"
        android:layout_height="@dimen/mdp_56"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_6"
        android:gravity="center_horizontal"
        android:text="@string/attach_take_pic"
        android:textColor="@color/text_bright_color"
        android:textSize="@dimen/msp_12"/>

</LinearLayout>