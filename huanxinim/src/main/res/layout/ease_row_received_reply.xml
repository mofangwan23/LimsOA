<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/mdp_13"
  android:orientation="vertical">

  <TextView
    android:id="@+id/timestamp"
    style="@style/chat_text_date_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_chat_activity"
    android:paddingBottom="@dimen/mdp_5"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/iv_userhead"
      style="@style/message_item_left_user_icon" />

    <TextView
      android:id="@+id/tv_userid"
      style="@style/chat_message_item_left_name"
      android:layout_toRightOf="@id/iv_userhead" />

    <LinearLayout
      android:id="@+id/bubble"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/mdp_15"
      android:layout_marginLeft="@dimen/margin_chat_activity"
      android:layout_marginRight="@dimen/mdp_42"
      android:background="@drawable/ease_chatfrom_bg"
      android:minWidth="@dimen/mdp_200"
      android:orientation="vertical">


      <TextView
        android:id="@+id/tvUserTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/reply_receive"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="@dimen/mdp_220"
        android:textColor="#b2b2b2"
        android:textSize="@dimen/msp_14" />


      <TextView
        android:id="@+id/tvOriginalContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_15"
        android:layout_marginRight="@dimen/mdp_15"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="@dimen/mdp_220"
        android:textColor="#b2b2b2"
        android:textSize="@dimen/msp_14" />

      <View
        style="@style/CoreSplitLine"
        android:layout_marginTop="@dimen/mdp_15"
     />

      <TextView
        android:id="@+id/tv_chatcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_15"
        android:lineSpacingExtra="@dimen/mdp_2"
        android:maxWidth="@dimen/mdp_220"
        android:textColor="#666666"
        android:textSize="@dimen/msp_16" />

    </LinearLayout>


  </LinearLayout>

</LinearLayout>