<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.photoview.EasePhotoView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/gif"
        android:layout_width="@dimen/mdp_160"
        android:layout_height="@dimen/mdp_160"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/pb_load_local"
        android:layout_width="@dimen/mdp_36"
        android:layout_height="@dimen/mdp_36"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>