<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="@dimen/mdp_40"
            android:layout_height="@dimen/mdp_40"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/mdp_10"
            android:layout_marginLeft="@dimen/mdp_14"
            android:layout_marginRight="@dimen/mdp_18"
            android:layout_marginTop="@dimen/mdp_10" />

        <FrameLayout
            android:layout_width="@dimen/mdp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/mdp_10"
            android:paddingTop="@dimen/mdp_10">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mdp_39"
                android:gravity="left|center_vertical"
                android:textColor="@android:color/black"
                android:textSize="@dimen/mdp_18" />

            <CheckBox
                android:id="@+id/ivContactCheck"
                android:layout_width="@dimen/mdp_20"
                android:layout_height="@dimen/mdp_20"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/mdp_24"
                android:background="@drawable/em_checkbox_blue_selected"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/mdp_24"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mdp_10"
                    android:text="群主"
                    android:textSize="@dimen/text_little_size" />

                <ImageView
                    android:id="@+id/iv_black"
                    android:layout_width="@dimen/mdp_20"
                    android:layout_height="@dimen/mdp_20"
                    android:layout_marginLeft="@dimen/mdp_10"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_mute"
                    android:layout_width="@dimen/mdp_20"
                    android:layout_height="@dimen/mdp_20"
                    android:layout_marginLeft="@dimen/mdp_10"
                    android:src="@drawable/disable_sendmsg"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_admin"
                    android:layout_width="@dimen/mdp_20"
                    android:layout_height="@dimen/mdp_20"
                    android:layout_marginLeft="@dimen/mdp_10"
                    android:src="@drawable/em_admin"
                    android:visibility="gone" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_1"
        android:background="@color/em_ab_filter_split_color" />

</LinearLayout>
