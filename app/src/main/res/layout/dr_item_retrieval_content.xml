<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/drLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_2"
        android:paddingBottom="@dimen/mdp_2"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drIvIcon"
            android:layout_width="@dimen/mdp_40"
            android:layout_height="@dimen/mdp_40"
            android:layout_marginTop="@dimen/mdp_10"
            android:layout_marginBottom="@dimen/mdp_10"
            android:layout_marginLeft="@dimen/mdp_14"
            android:layout_marginRight="@dimen/mdp_10"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="@dimen/mdp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drTvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_16"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/msp_16"/>

            <TextView
                android:id="@+id/drTvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_4"
                android:layout_marginRight="@dimen/mdp_16"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#808080"
                android:textSize="@dimen/msp_14"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/DRSplitLineWithMargin"/>
</LinearLayout>