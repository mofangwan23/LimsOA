<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gesturepwd_unlock_face"
        android:layout_width="@dimen/mdp_80_0"
        android:layout_height="@dimen/mdp_80_0"
        android:layout_marginTop="@dimen/mdp_64"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/mdp_3_0"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_280_0"
        android:gravity="center"
        android:layout_marginTop="@dimen/mdp_50"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fingerprintImg"
            android:layout_width="@dimen/mdp_80_0"
            android:layout_height="@dimen/mdp_80_0"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_fingerprint"/>

        <TextView
            android:id="@+id/gesturepwd_unlock_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_18_0"
            android:layout_marginLeft="@dimen/mdp_40_0"
            android:layout_marginRight="@dimen/mdp_40_0"
            android:gravity="center_horizontal"
            android:shadowColor="#b3ffffff"
            android:shadowRadius="1.0"
            android:text="@string/fp_txt_use_fingerprint_clicked"
            android:textColor="#797979"
            android:textSize="@dimen/msp_15_0"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/gesturepwd_unlock_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mdp_24"
        android:layout_gravity="center"
        android:gravity="center_horizontal|bottom"
        android:shadowColor="#e0ffffff"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="@string/fp_txt_use_pwd_login"
        android:textColor="#21befd"
        android:textSize="@dimen/msp_13_0"/>

</LinearLayout>
