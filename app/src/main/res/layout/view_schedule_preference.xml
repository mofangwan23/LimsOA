<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_schedule_preference"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/mdp_10">
    <ImageView
        android:id="@+id/ivScheduleIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_time_icon"/>
    <TextView
        android:id="@+id/tvSchedulePreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_12"
        android:textSize="@dimen/msp_16"/>
    <TextView
        android:id="@+id/tvSchedulePreTitle"
        android:layout_width="@dimen/mdp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_16"
        android:layout_weight="1"
        android:textColor="#000"
        android:textSize="@dimen/mdp_14"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow"/>
</LinearLayout>
