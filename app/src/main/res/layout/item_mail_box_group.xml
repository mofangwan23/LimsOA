<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMailSendTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/thecontact_background"
            android:paddingBottom="@dimen/mdp_8"
            android:paddingLeft="@dimen/mdp_12"
            android:paddingTop="@dimen/mdp_8"
            android:text="Hello World"
            android:textColor="@android:color/black"
            android:textSize="@dimen/msp_14"/>

        <ImageView
            android:id="@+id/ivGroupIndicator"
            android:layout_width="@dimen/mdp_16"
            android:layout_height="@dimen/mdp_16"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/mdp_10"
            android:src="@drawable/address_tree_department_ec"/>
    </FrameLayout>

    <View
        android:id="@+id/viewSplitLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_2"
        android:background="#CCCCCC"/>

</LinearLayout>