<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <cn.flyrise.feep.more.widget.ViewpagerSubscript
        android:id="@+id/subscriptLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mdp_36"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvEnter"
        android:layout_width="137dp"
        android:layout_height="41dp"
        android:layout_marginBottom="@dimen/mdp_36"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/guide_btn_bg"
        android:text="@string/viewpager_button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/msp_15"
        android:visibility="gone"/>
</RelativeLayout>
