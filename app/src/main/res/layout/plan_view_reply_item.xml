<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mdp_15"
    android:paddingLeft="@dimen/mdp_15"
    android:paddingRight="@dimen/mdp_15"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="@dimen/mdp_30"
        android:layout_height="@dimen/mdp_29"
        android:src="@drawable/userinfo_icon_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/standard_text_g_70"
            android:textSize="@dimen/msp_13"/>

        <TextView
            android:id="@+id/tvReplyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_5"
            android:textColor="@color/standard_text_g_100"
            android:lineSpacingMultiplier="1.414"
            android:textSize="@dimen/msp_15"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReplyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/standard_text_g_70"
                android:textSize="@dimen/msp_11"/>

            <TextView
                android:id="@+id/tvReplyClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mdp_15"
                android:layout_toRightOf="@+id/tvReplyTime"
                android:textColor="@color/standard_text_g_70"
                android:textSize="@dimen/msp_11"/>

            <ImageView
                android:id="@+id/ivReply"
                android:layout_width="@dimen/mdp_20"
                android:layout_height="@dimen/mdp_20"
                android:layout_alignParentRight="true"
                android:padding="@dimen/mdp_3"
                android:src="@drawable/reply_comment"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/childReplyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_10"/>

        <View
            style="@style/detail_line"
            android:layout_marginTop="@dimen/mdp_15"/>

    </LinearLayout>

</LinearLayout>