<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/avatar_selected_btn_bg"
    android:orientation="vertical"
    android:padding="@dimen/mdp_4">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/avatar_icon"
            android:layout_width="@dimen/mdp_24"
            android:layout_height="@dimen/mdp_24"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/avatar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="#fffffa"
            android:textSize="@dimen/msp_10"/>
    </LinearLayout>
</RelativeLayout>
