<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_8"
        android:paddingBottom="@dimen/mdp_4"
        android:paddingLeft="@dimen/mdp_12"
        android:paddingRight="@dimen/mdp_12"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvScheduleTitle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_dark_color"
            android:textSize="@dimen/text_middle_size"/>

        <TextView
            android:id="@+id/tvScheduleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_4"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_bright_color"
            android:textSize="@dimen/text_little_size"/>

        <LinearLayout
            android:id="@+id/item_user_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mdp_20"
            android:layout_marginTop="@dimen/mdp_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvScheduleAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/item_username_icon"
                android:drawablePadding="@dimen/mdp_8"
                android:textColor="@color/text_light_color"
                android:textSize="@dimen/text_min_size"/>

            <TextView
                android:id="@+id/tvScheduleSendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/item_time_icon"
                android:drawablePadding="@dimen/mdp_8"
                android:textColor="@color/text_light_color"
                android:textSize="@dimen/text_min_size"/>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/CoreSplitLine"/>
</LinearLayout>
