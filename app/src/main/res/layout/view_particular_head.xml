<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/mdp_4"
    android:paddingLeft="@dimen/mdp_12"
    android:paddingRight="@dimen/mdp_6"
    android:paddingTop="@dimen/mdp_16">

    <ImageView
        android:id="@+id/ivHeadUserIcon"
        android:layout_width="@dimen/mdp_35"
        android:layout_height="@dimen/mdp_35"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tvHeadTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivHeadUserIcon"
        android:paddingLeft="@dimen/mdp_8"
        android:paddingRight="@dimen/mdp_8"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="@dimen/mdp_16" />

    <TextView
        android:id="@+id/tvHeadUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeadTitle"
        android:layout_toRightOf="@id/ivHeadUserIcon"
        android:padding="@dimen/mdp_6"
        android:singleLine="true"
        android:textColor="#666666"
        android:textSize="@dimen/msp_14" />

    <TextView
        android:id="@+id/tvHeadSendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeadTitle"
        android:layout_marginLeft="@dimen/mdp_8"
        android:layout_toRightOf="@id/tvHeadUser"
        android:gravity="center_vertical"
        android:padding="@dimen/mdp_6"
        android:textColor="#999999"
        android:textSize="@dimen/msp_14"
        android:visibility="visible" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeadTitle"
        android:layout_marginLeft="@dimen/mdp_8"
        android:padding="@dimen/mdp_6"
        android:layout_toRightOf="@+id/tvHeadSendTime"
        >

        <TextView
            android:id="@+id/tvHeadNodeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_currentlink"
            android:drawablePadding="@dimen/mdp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/msp_14"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvHeadSendUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeadTitle"
        android:layout_marginLeft="@dimen/mdp_8"
        android:layout_marginTop="@dimen/mdp_4"
        android:layout_toRightOf="@id/tvHeadUser"
        android:background="@drawable/work_plan_send_bg"
        android:paddingBottom="@dimen/mdp_3"
        android:paddingLeft="@dimen/mdp_6"
        android:paddingRight="@dimen/mdp_6"
        android:paddingTop="@dimen/mdp_3"
        android:text="主送人"
        android:textColor="@android:color/white"
        android:textSize="@dimen/msp_14"
        android:visibility="gone" />
</RelativeLayout>
