<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLetter"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_4"
        android:paddingBottom="@dimen/mdp_4"
        android:paddingLeft="@dimen/mdp_14"
        android:background="@color/ab_filter_split_color"
        android:text="Hello World"
        android:textColor="@color/ab_filter_text_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivContactCheck"
            android:layout_width="@dimen/mdp_20"
            android:layout_height="@dimen/mdp_20"
            android:layout_marginLeft="@dimen/mdp_14"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/no_select_check"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="@dimen/mdp_40"
            android:layout_height="@dimen/mdp_40"
            android:layout_marginTop="@dimen/mdp_10"
            android:layout_marginBottom="@dimen/mdp_10"
            android:layout_marginLeft="@dimen/mdp_14"
            android:layout_marginRight="@dimen/mdp_18"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="@dimen/mdp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/mdp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/mdp_18"/>

            <TextView
                android:id="@+id/tvUserPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_4"
                android:layout_marginBottom="@dimen/mdp_10"
                android:textColor="@color/half_black"
                android:textSize="@dimen/mdp_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mdp_0_2"
                android:background="@color/ab_filter_split_color"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
