<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mdp_10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_10"
        android:paddingBottom="@dimen/mdp_10"
        android:paddingLeft="@dimen/mdp_15"
        android:paddingRight="@dimen/mdp_15"
        android:background="@color/all_background_color"
        android:gravity="center_vertical"
        android:minHeight="74dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_sign_in_title"
            android:textSize="@dimen/msp_16"/>

        <TextView
            android:id="@+id/location_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_5"
            android:textColor="@color/text_sign_in_content"
            android:textSize="@dimen/msp_12"/>
    </LinearLayout>

    <View style="@style/detail_line"/>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_35"
        android:paddingLeft="@dimen/mdp_15"
        android:paddingRight="@dimen/mdp_15"
        android:background="@color/all_background_color">

        <RadioButton
            android:id="@+id/radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/location_custom_default"
            android:textColor="@color/text_sign_in_content"
            android:textSize="@dimen/msp_12"/>

        <TextView
            android:id="@+id/modify_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_6"
            android:layout_toLeftOf="@+id/delete_button"
            android:padding="@dimen/mdp_6"
            android:text="@string/lbl_text_edit"
            android:textColor="@color/text_sign_in_content"
            android:textSize="@dimen/msp_12"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/mdp_6"
            android:text="@string/delete_group_chat"
            android:textColor="@color/text_sign_in_content"
            android:textSize="@dimen/msp_12"/>
    </RelativeLayout>
    <!--最后一行边距-->
    <View
        android:id="@+id/buttomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_20"/>
</LinearLayout>