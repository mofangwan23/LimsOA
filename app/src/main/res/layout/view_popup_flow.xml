<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/mdp_8"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivFlowAvatar"
        android:layout_width="@dimen/mdp_36"
        android:layout_height="@dimen/mdp_36"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_8"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFlowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/msp_16"/>

        <TextView
            android:id="@+id/tvFlowState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_4"
            android:textSize="@dimen/msp_14"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>