<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/avatar_icon"
        android:layout_width="@dimen/mdp_26"
        android:layout_height="@dimen/mdp_26"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/avatar_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mdp_1"
        android:gravity="center_horizontal"
        android:textSize="@dimen/msp_10" />
    <ImageView
        android:id="@+id/avatar_tick"
        android:layout_width="@dimen/mdp_16"
        android:layout_height="@dimen/mdp_16"
        android:layout_marginTop="@dimen/mdp_6"
        android:src="@drawable/readed_fe"
        android:visibility="invisible" />
</RelativeLayout>
