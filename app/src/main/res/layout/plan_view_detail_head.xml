<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/mdp_15"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="@dimen/mdp_45"
        android:layout_height="@dimen/mdp_45"
        android:src="@drawable/userinfo_icon_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/mdp_45"
        android:layout_marginLeft="@dimen/mdp_10">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF191919"
            android:textSize="@dimen/msp_16"/>

        <TextView
            android:id="@+id/tvSenderHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_5"
            android:layout_below="@+id/tvTitle"
            android:gravity="center_vertical"
            android:textColor="#8B8C8C"
            android:textSize="@dimen/msp_13"/>

        <ImageView
            android:id="@+id/ivMoreDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvTitle"
            android:paddingTop="@dimen/mdp_5"
            android:paddingLeft="@dimen/mdp_15"
            android:paddingRight="@dimen/mdp_5"
            android:src="@drawable/lower_arrow_icon"/>

        <LinearLayout
            android:id="@+id/lyMoreDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lySender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/mdp_70"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_detail_send_user"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"
                    />

                <TextView
                    android:id="@+id/tvSender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ff191919"
                    android:textSize="@dimen/msp_13"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyReceiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/mdp_70"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_detail_receiver_user"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"
                    />

                <TextView
                    android:id="@+id/tvReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff191919"
                    android:textSize="@dimen/msp_13"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyCCUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/mdp_70"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_detail_cc_user"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"
                    />

                <TextView
                    android:id="@+id/tvCCUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff191919"
                    android:textSize="@dimen/msp_13"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyNotifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/mdp_70"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_detail_notifier_user"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"
                    />

                <TextView
                    android:id="@+id/tvNotifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff191919"
                    android:textSize="@dimen/msp_13"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/mdp_70"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_detail_start_time"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"
                    />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/mdp_70"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_detail_end_time"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"
                    />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/msp_13"
                    />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>