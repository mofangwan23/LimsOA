<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bdp_white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mdp_15"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/mdp_4"
            android:layout_height="@dimen/mdp_18"
            android:background="#ff28b9ff"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdp_10"
            android:textColor="#ff000000"
            android:textSize="@dimen/msp_15"/>

    </LinearLayout>

    <View style="@style/detail_line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/replyListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

    <LinearLayout
        android:id="@+id/lyEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_35"
        android:layout_marginBottom="@dimen/mdp_35"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/mdp_150"
            android:layout_height="@dimen/mdp_100"
            android:src="@drawable/plan_no_reply"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_20"
            android:text="@string/plan_detail_reply_empty"
            android:textColor="#7AD1FB"
            android:textSize="@dimen/msp_15"
            />
    </LinearLayout>

</LinearLayout>