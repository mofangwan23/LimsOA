<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMatterType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ab_filter_split_color"
        android:paddingBottom="@dimen/mdp_4"
        android:paddingLeft="@dimen/mdp_14"
        android:paddingTop="@dimen/mdp_4"
        android:text="A"
        android:textColor="@color/ab_filter_text_color"
        android:textStyle="bold"/>


    <FrameLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/ivMatterCheck"
            android:layout_width="@dimen/mdp_20"
            android:layout_height="@dimen/mdp_20"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/mdp_16"
            android:src="@drawable/no_select_check"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/mdp_10"
            android:paddingLeft="@dimen/mdp_12"
            android:paddingRight="@dimen/mdp_12"
            android:paddingTop="@dimen/mdp_10">

            <TextView
                android:id="@+id/tvMatterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_48"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/mdp_16"/>

            <LinearLayout
                android:id="@+id/layoutOutTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_20_dp"
                android:layout_marginTop="@dimen/mdp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/item_username_icon"/>

                <TextView
                    android:id="@+id/tvMatterSendUser"
                    android:layout_width="@dimen/mdp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mdp_16"
                    android:layout_weight="1"
                    android:text="Hello World"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/mdp_12"/>

                <TextView
                    android:id="@+id/tvMatterSendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mdp_48"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/mdp_12"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_2"
        android:background="@color/ab_filter_split_color"/>
</LinearLayout>
