<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ab_filter_split_color"
        android:paddingBottom="@dimen/mdp_4"
        android:paddingLeft="@dimen/mdp_14"
        android:paddingTop="@dimen/mdp_4"
        android:text="Hello World"
        android:textColor="@color/ab_filter_text_color"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="@dimen/mdp_40"
            android:layout_height="@dimen/mdp_40"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/mdp_10"
            android:layout_marginLeft="@dimen/mdp_14"
            android:layout_marginRight="@dimen/mdp_18"
            android:layout_marginTop="@dimen/mdp_10"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/mdp_18"/>

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mdp_8"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/mdp_14"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvUserCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mdp_10"
                android:layout_marginTop="@dimen/mdp_4"
                android:textColor="@color/half_black"
                android:textSize="@dimen/mdp_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mdp_0_2"
                android:background="@color/ab_filter_split_color"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
