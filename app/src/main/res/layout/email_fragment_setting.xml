<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/mdp_12">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_12"
        android:gravity="center_vertical"
        android:text="内部邮箱账号"
        android:textSize="@dimen/msp_16"/>
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/login_setting_defulit"/>
    <include layout="@layout/view_line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_12"
        android:text="外部邮箱账号"
        android:textSize="@dimen/msp_16"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="@dimen/mdp_0">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mdp_12"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="@dimen/mdp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_12"
            android:layout_weight="1"
            android:background="@drawable/download_bottm"
            android:gravity="center"
            android:text="添加新邮箱"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="@dimen/mdp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/download_bottm"
            android:gravity="center"
            android:text="设置"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
