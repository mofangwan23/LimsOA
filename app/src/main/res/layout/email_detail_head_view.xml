<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mdp_4"
    android:background="@color/all_background_color"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mdp_12"
    android:paddingRight="@dimen/mdp_12"
    android:paddingTop="@dimen/mdp_12">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/mdp_8">
        <TextView
            android:id="@+id/tvMailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_4"
            android:textColor="@android:color/black"
            android:textSize="@dimen/msp_16"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发件人："/>
            <TextView
                android:id="@+id/tvMailSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00BB00"
                android:textSize="@dimen/msp_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时    间："/>
            <TextView
                android:id="@+id/tvMailSendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/msp_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMailparticipant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看邮件参与人 >"
                android:textColor="@color/im_titlebar_bg"
                android:textSize="@dimen/msp_14"/>
            <!--<TextView-->
            <!--android:id="@+id/tvMailReceiver"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="@dimen/msp_14"/>-->
        </LinearLayout>
        <TextView
            android:id="@+id/tvMoreAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_8"
            android:text="查看邮件附件 >"
            android:textColor="@color/im_titlebar_bg"
            android:textSize="@dimen/msp_14"
            android:visibility="gone"/>
    </LinearLayout>
    <include layout="@layout/view_line"/>
</LinearLayout>
