<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp">

    <cn.flyrise.feep.location.widget.CricleProgressView
        android:id="@+id/preogress"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/leader_kanban_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/arrive_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFE4E6E7"
                    android:textSize="@dimen/msp_40"/>

                <TextView
                    android:id="@+id/should_be_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/0"
                    android:textColor="#8B8C8C"
                    android:textSize="@dimen/msp_30"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_leader_day_statis_progress_title"
                android:textColor="#9DA3A6"
                android:textSize="@dimen/msp_12"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/leader_kanban_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_2"
                android:layout_centerInParent="true"
                android:text="@string/location_leader_day_statis_show"
                android:textColor="#9DA3A6"
                android:textSize="@dimen/msp_11"/>

            <ImageView
                android:id="@+id/detail_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/detail_title"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>