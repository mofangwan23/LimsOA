<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/scheduleTypeView"
            android:layout_width="@dimen/mdp_5"
            android:layout_height="match_parent"
            android:background="@color/defaultColorAccent">

        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/mdp_12"
            android:paddingBottom="@dimen/mdp_12"
            android:paddingLeft="@dimen/mdp_16"
            android:paddingRight="@dimen/mdp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvScheduleTitle"
                    android:layout_width="@dimen/mdp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/mdp_2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#4D4D4D"
                    android:textSize="@dimen/msp_16"/>

                <TextView
                    android:id="@+id/tvScheduleAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#B2B2B2"
                    android:textSize="@dimen/msp_12"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvScheduleTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_8"
                android:layout_marginRight="@dimen/mdp_8"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:drawableLeft="@drawable/item_time_icon"
                android:drawablePadding="@dimen/mdp_4"
                android:textColor="#999999"
                android:textSize="@dimen/msp_14"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
