<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="@dimen/mdp_36"
        android:layout_height="@dimen/mdp_36"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/mdp_10"
        android:layout_marginLeft="@dimen/mdp_14"
        android:layout_marginRight="@dimen/mdp_18"
        android:layout_marginTop="@dimen/mdp_10"/>

    <LinearLayout
        android:layout_width="@dimen/mdp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/mdp_16"/>

        <TextView
            android:id="@+id/tvUserPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mdp_10"
            android:layout_marginTop="@dimen/mdp_4"
            android:textColor="@color/half_black"
            android:textSize="@dimen/mdp_12"/>

        <include layout="@layout/view_line"/>
    </LinearLayout>
</LinearLayout>
