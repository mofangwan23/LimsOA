<?xml version="1.0" encoding="utf-8"?>
<cn.flyrise.feep.core.base.views.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/swipeBackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/core_view_transparent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/core_view_toolbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvContent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/qrcode_content"
            android:textColor="#FF7F7F7F"
            android:textSize="@dimen/msp_14"/>


        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_30"
            android:layout_marginBottom="@dimen/mdp_20"
            android:layout_marginLeft="@dimen/mdp_56"
            android:layout_marginRight="@dimen/mdp_56"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxHeight="@dimen/mdp_200"
            android:textColor="#FF04121A"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_middle_size"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mdp_16"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/qrcode_content_warm"
            android:textColor="#FF7F7F7F"
            android:textSize="@dimen/text_middle_size"/>

        <Button
            android:id="@+id/btCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContent"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:text="@string/copy"
            android:textColor="#FF28B9FF"
            android:textSize="@dimen/msp_16"/>


    </RelativeLayout>
</cn.flyrise.feep.core.base.views.SwipeBackLayout>
