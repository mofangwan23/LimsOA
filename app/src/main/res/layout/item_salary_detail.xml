<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mdp_12">

        <TextView
            android:id="@+id/tvSalaryKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/msp_16"/>

        <TextView
            android:id="@+id/tvSalaryValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/mdp_16"
            android:layout_toRightOf="@id/tvSalaryKey"
            android:textSize="@dimen/msp_16"/>
    </RelativeLayout>

    <View
        android:id="@+id/viewSplitLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_2"
        android:layout_marginLeft="@dimen/mdp_12"
        android:background="#CCCCCC"/>

    <View
        android:id="@+id/viewSplitLine16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_16"
        android:background="@color/thecontact_background"
        android:visibility="gone"/>

</LinearLayout>