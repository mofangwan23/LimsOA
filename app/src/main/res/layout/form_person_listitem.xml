<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mdp_10"
        android:layout_toLeftOf="@+id/form_node_two_bnt"
        android:gravity="center_vertical"
        android:minHeight="@dimen/mdp_40"
        android:orientation="vertical"
        android:paddingBottom="@dimen/mdp_10"
        android:paddingTop="@dimen/mdp_10">

        <TextView
            android:id="@+id/form_node_two_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/userinfo_detail_content"
            android:textSize="@dimen/msp_14"/>

        <TextView
            android:id="@+id/form_node_two_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF555555"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/form_node_two_bnt"
        android:layout_width="@dimen/mdp_37"
        android:layout_height="@dimen/mdp_37"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/mdp_5"
        android:clickable="false"
        android:focusable="false"
        android:padding="@dimen/mdp_5"/>

    <View
        style="@style/detail_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/mdp_10"
        android:paddingBottom="@dimen/mdp_10"/>
</RelativeLayout>
