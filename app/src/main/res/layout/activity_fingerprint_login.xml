<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/mdp_10"
    android:paddingRight="@dimen/mdp_10"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="@dimen/mdp_80_0"
        android:layout_height="@dimen/mdp_80_0"
        android:layout_marginTop="@dimen/mdp_64"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/mdp_3_0"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tvGesturePrompt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_24_0"
        android:layout_marginLeft="@dimen/mdp_40_0"
        android:layout_marginRight="@dimen/mdp_40_0"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="@string/fp_txt_use_fingerprint_login"
        android:textColor="#797979"
        android:textSize="@dimen/msp_16"/>

    <TextView
        android:id="@+id/tvGestureLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_16_0"
        android:layout_marginLeft="@dimen/mdp_40_0"
        android:layout_marginRight="@dimen/mdp_40_0"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="@string/lockpattern_need_to_five"
        android:textColor="#797979"
        android:textSize="@dimen/msp_12_0"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_280_0">

        <ImageView
            android:layout_width="@dimen/mdp_80_0"
            android:layout_height="@dimen/mdp_80_0"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_fingerprint"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingBottom="@dimen/mdp_24"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="#e0ffffff"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="@string/fp_txt_use_pwd_login"
        android:textColor="#21befd"
        android:textSize="@dimen/msp_13_0"/>
    </RelativeLayout>
</LinearLayout>
