<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:minWidth="@dimen/mdp_270"
    android:orientation="vertical"
    android:paddingBottom="@dimen/mdp_16"
    android:paddingLeft="@dimen/mdp_10"
    android:paddingRight="@dimen/mdp_5"
    android:paddingTop="@dimen/mdp_16">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/workplan_receiveUsers_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/mdp_85"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:gravity="right"
                android:text="主送人："
                android:textColor="#ff555555"
                android:textSize="@dimen/mdp_16"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/workplan_receiveUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:textColor="#ff333333"
                android:textSize="@dimen/mdp_16"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/workplan_ccusers_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_5"
            android:background="#ffffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/mdp_85"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:gravity="right"
                android:text="抄送人："
                android:textColor="#ff555555"
                android:textSize="@dimen/mdp_16"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/workplan_ccusers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:textColor="#ff333333"
                android:textSize="@dimen/mdp_16"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/workplan_noticeUsers_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_5"
            android:background="#ffffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/mdp_85"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:gravity="right"
                android:text="告知人："
                android:textColor="#ff555555"
                android:textSize="@dimen/mdp_16"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/workplan_noticeUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:textColor="#ff333333"
                android:textSize="@dimen/mdp_16"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_5"
            android:background="#ffffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/mdp_85"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:gravity="right"
                android:text="开始时间："
                android:textColor="#ff555555"
                android:textSize="@dimen/mdp_16"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/workplan_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:textColor="#ff333333"
                android:textSize="@dimen/mdp_16"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_5"
            android:background="#ffffffff"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/mdp_85"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:gravity="right"
                android:text="结束时间："
                android:textColor="#ff555555"
                android:textSize="@dimen/mdp_16"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/workplan_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mdp_3"
                android:textColor="#ff333333"
                android:textSize="@dimen/mdp_16"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
