<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/standard_bg_content_g_20"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_10"
        android:paddingBottom="@dimen/mdp_10"
        android:paddingLeft="@dimen/mdp_15"
        android:paddingRight="@dimen/mdp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_10"
            android:src="@drawable/plan_unread"/>

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/mdp_40"
            android:layout_height="@dimen/mdp_40"/>

        <LinearLayout
            android:id="@+id/lyContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdp_10"
            android:layout_toRightOf="@id/ivHead"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#04121A"
                android:textSize="@dimen/msp_15"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdp_3"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9DA3A6"
                    android:textSize="@dimen/msp_13"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#9DA3A6"
                    android:textSize="@dimen/msp_11"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View style="@style/detail_line"/>
</LinearLayout>