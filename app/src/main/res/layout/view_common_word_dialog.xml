<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defaultColorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/mdp_20">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_lb_size"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_16"
        android:background="@null"
        android:hint="输入常用语..."
        android:maxLines="6"
        android:theme="@style/AppBaseTheme"/>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_5"
        android:layout_marginTop="@dimen/mdp_6"
        android:background="#CCCCCC">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_16"
        android:visibility="visible">
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvConfirm"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/mdp_4"
            android:paddingLeft="@dimen/mdp_8"
            android:paddingRight="@dimen/mdp_8"
            android:paddingTop="@dimen/mdp_4"
            android:text="取消"
            android:textSize="@dimen/mdp_16"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/mdp_8"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/mdp_4"
            android:paddingLeft="@dimen/mdp_8"
            android:paddingRight="@dimen/mdp_8"
            android:paddingTop="@dimen/mdp_4"
            android:text="确认"
            android:textColor="@color/defaultColorAccent"
            android:textSize="@dimen/mdp_16"/>
    </RelativeLayout>
</LinearLayout>
