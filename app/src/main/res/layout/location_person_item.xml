<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/person_char_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_28"
        android:background="@drawable/detail_tit_fe"
        android:visibility="gone">
        <TextView
            android:id="@+id/person_char"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mdp_26"
            android:paddingLeft="@dimen/mdp_10"
            android:gravity="center_vertical"
            android:textColor="@color/list_item_title_color"
            android:textSize="@dimen/msp_15"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mdp_1"
            android:layout_below="@id/person_char"
            android:background="#aaaaaa"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_char_layout"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mdp_52"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/mdp_38"
                android:layout_height="@dimen/mdp_38"
                android:layout_marginLeft="@dimen/mdp_10"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/person_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/user_name"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/all_background_color"
                    android:textSize="@dimen/mdp_12"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mdp_12"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/text_sign_in_title"
                android:textSize="@dimen/msp_15"/>
            <TextView
                android:id="@+id/person_post"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mdp_8"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/text_sign_in_content"
                android:textSize="@dimen/msp_12"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/person_checked"
            android:layout_width="@dimen/mdp_26"
            android:layout_height="@dimen/mdp_26"
            android:layout_marginRight="@dimen/mdp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/readed_fe"
            android:visibility="gone"/>
    </RelativeLayout>
    <View
        style="@style/detail_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
