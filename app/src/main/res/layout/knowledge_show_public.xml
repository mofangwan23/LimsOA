<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background_color">
    <include
        layout="@layout/core_view_transparent"/>
    <include layout="@layout/view_line"/>
    <include
        layout="@layout/konwledge_footmenu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.flyrise.feep.core.base.views.FEToolbar
                android:id="@id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/status_bar_height"
                android:background="@color/colorPrimary"
                android:fitsSystemWindows="true"
                android:minHeight="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"/>
        </android.support.design.widget.AppBarLayout>

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="@dimen/mdp_56"
            android:layout_height="@dimen/mdp_56"
            android:layout_marginTop="@dimen/dim_30_dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ms_icon_thumbnail_unknow"/>

        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdp_15"
            android:layout_marginLeft="@dimen/mdp_15"
            android:layout_marginRight="@dimen/mdp_15"
            android:gravity="center"
            android:text="@string/file_name"
            android:textSize="@dimen/msp_16"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mdp_15"
            android:background="@drawable/detail_btn_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:gravity="center"
                    android:text="发布人员："/>
                <View
                    android:layout_width="@dimen/mdp_1"
                    android:layout_height="match_parent"
                    android:background="@color/detail_line"
                    />
                <TextView
                    android:id="@+id/send_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:paddingLeft="@dimen/mdp_5"
                    android:gravity="left|center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mdp_0_8"
                android:background="@color/detail_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:gravity="center"
                    android:text="发布时间："/>
                <View
                    android:id="@+id/view5"
                    android:layout_width="@dimen/mdp_1"
                    android:layout_height="match_parent"
                    android:background="@color/detail_line"
                    />
                <TextView
                    android:id="@+id/public_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:paddingLeft="@dimen/mdp_5"
                    android:gravity="left|center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mdp_0_8"
                android:background="@color/detail_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:gravity="center"
                    android:text="文件大小："/>
                <View
                    android:id="@+id/view6"
                    android:layout_width="@dimen/mdp_1"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/detail_line"/>
                <TextView
                    android:id="@+id/file_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:paddingLeft="@dimen/mdp_5"
                    android:gravity="left|center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mdp_0_8"
                android:background="@color/detail_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:gravity="center"
                    android:text="有效时间："/>
                <View
                    android:id="@+id/view7"
                    android:layout_width="@dimen/mdp_1"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/detail_line"/>
                <TextView
                    android:id="@+id/valid_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/mdp_5"
                    android:paddingBottom="@dimen/mdp_5"
                    android:paddingLeft="@dimen/mdp_5"
                    android:gravity="left|center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
