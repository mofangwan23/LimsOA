<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_60">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/mdp_42"
            android:layout_height="@dimen/mdp_42"
            android:layout_marginLeft="@dimen/mdp_15"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdp_9"
            android:layout_marginRight="@dimen/mdp_7"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_state"
            android:layout_toRightOf="@+id/user_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mdp_3"
                    android:textColor="#191919"
                    android:textSize="@dimen/msp_16"/>
                <TextView
                    android:id="@+id/user_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#9B9B9B"
                    android:textSize="@dimen/msp_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mdp_3"
                    android:drawableLeft="@drawable/location_leader_field_person_icon"
                    android:textColor="@color/text_sign_in_content"
                    android:textSize="@dimen/msp_12"/>
                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_sign_in_content"
                    android:textSize="@dimen/msp_12"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_state"
            android:layout_width="@dimen/mdp_6"
            android:layout_height="@dimen/mdp_12"
            android:layout_marginRight="@dimen/mdp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user_info_right_icon"/>
    </RelativeLayout>

    <View
        style="@style/detail_line"
        android:layout_alignParentBottom="true"/>

</LinearLayout>