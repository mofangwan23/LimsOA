<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F6"
    android:orientation="vertical">

    <include layout="@layout/core_view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/mdp_30"
        android:layout_marginBottom="@dimen/mdp_30"
        android:layout_marginLeft="@dimen/mdp_16"
        android:layout_marginRight="@dimen/mdp_16"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMeetingQRCode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="@dimen/mdp_30"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="扫描二维码进行会议签到"
            android:textColor="@android:color/black"
            android:textSize="@dimen/msp_16"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvSaveToSdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mdp_16"
        android:paddingBottom="@dimen/mdp_16"
        android:background="@color/core_default_accent_color"
        android:gravity="center"
        android:text="保存到手机"
        android:textColor="@android:color/white"
        android:textSize="@dimen/msp_16"/>
</LinearLayout>