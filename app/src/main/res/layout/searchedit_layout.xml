<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#cccccc"
                android:padding="@dimen/mdp_8"
                android:gravity="center_vertical">
    <cn.flyrise.android.library.view.SearchEditText
        android:id="@+id/search_edittext"
        style="@style/editTextStylebai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_28"
        android:textSize="@dimen/msp_14"
        android:layout_gravity="center_vertical"
        android:background="@drawable/core_search_round_edittext"
        android:gravity="center_vertical"
        android:hint="@string/search_empty_searchkey"/>
</RelativeLayout>
