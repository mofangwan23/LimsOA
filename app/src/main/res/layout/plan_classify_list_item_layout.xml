<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mdp_60"
    android:background="@color/all_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/plan_icon"
            android:layout_width="@dimen/mdp_42"
            android:layout_height="@dimen/mdp_42"
            android:layout_marginLeft="@dimen/mdp_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdp_10"
            android:layout_marginRight="@dimen/mdp_10"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/plan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_sign_in_title"
                android:textSize="@dimen/msp_16"/>
            <TextView
                android:id="@+id/plan_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_sign_in_content"
                android:textSize="@dimen/msp_14"/>

        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/detail_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>