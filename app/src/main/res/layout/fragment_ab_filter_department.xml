<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_5"
        android:layout_alignParentBottom="true"
        android:background="#EDEDED"/>

    <LinearLayout
        android:id="@+id/layoutDepartmentFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/departmentListView"
            android:layout_width="@dimen/mdp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@android:color/white"
            android:divider="@null"
            android:dividerHeight="@dimen/mdp_0">
        </ListView>

        <ListView
            android:id="@+id/subDepartmentListView"
            android:layout_width="@dimen/mdp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ab_pop_sub_dept_bg"
            android:divider="@null"
            android:dividerHeight="@dimen/mdp_0">
        </ListView>
    </LinearLayout>

    <include layout="@layout/view_line"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_18"
        android:background="@color/ab_pop_bottom_color"
        android:paddingBottom="@dimen/mdp_6"
        android:paddingTop="@dimen/mdp_6"
        android:src="@drawable/icon_ab_filter_end"/>
</LinearLayout>