<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
    <com.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="将二维码放入框内，即可自动扫描"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_zxing_tips"
        />
    <RelativeLayout
        android:id="@id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/mdp_12"
            android:paddingRight="@dimen/mdp_16"
            android:clickable="true"
            android:src="@mipmap/core_icon_back"/>

        <TextView
            android:id="@+id/toolBarTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdp_64"
            android:layout_marginRight="@dimen/mdp_64"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/zxing_setting_tv"
            android:textColor="@android:color/white"
            android:textSize="@dimen/msp_18"/>

        <TextView
            android:id="@+id/toolBarRightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdp_8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/mdp_8"
            android:clickable="true"
            android:text="@string/zxing_right_select"
            android:textColor="@android:color/white"
            android:textSize="@dimen/msp_16"
            android:visibility="visible"/>
    </RelativeLayout>
</RelativeLayout>
