<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_16"
        android:layout_marginRight="@dimen/mdp_12"
        android:src="@mipmap/core_icon_folder"/>

    <TextView
        android:id="@+id/tvCollectionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/mdp_16"
        android:paddingBottom="@dimen/mdp_16"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="审批"
        android:textColor="@android:color/black"
        android:textSize="@dimen/msp_16"/>

    <ImageView
        android:id="@+id/ivCollectionSelect"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/mdp_16"
        android:paddingRight="@dimen/mdp_16"
        android:src="@drawable/ic_collect_uncheck"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivCollectionMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mdp_16"
        android:src="@drawable/frequent_contects_iocn_right"
        android:visibility="gone"/>

</LinearLayout>