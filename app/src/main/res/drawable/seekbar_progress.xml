<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  背景  -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/mdp_5" />
            <size android:width="@dimen/mdp_280" android:height="@dimen/mdp_1" />
            <gradient
                android:angle="270"
                android:centerColor="#fffffff0"
                android:centerY="0.75"
                android:endColor="#fffffafa"
                android:startColor="#ffffffff" />
        </shape>
    </item>
    <!--  第二进度条  -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/mdp_5" />
                <size android:width="@dimen/mdp_280" android:height="@dimen/mdp_1" />
                <gradient
                    android:angle="270"
                    android:centerColor="#8000bfff"
                    android:centerY="0.75"
                    android:endColor="#a000b2ee"
                    android:startColor="#8000cdcd" />
            </shape>
        </clip>
    </item>
    <!--  第一进度条  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/mdp_5" />
                <size android:width="@dimen/mdp_280" android:height="@dimen/mdp_1" />
                <gradient
                    android:angle="270"
                    android:centerColor="#ff00ced1"
                    android:centerY="0.75"
                    android:endColor="#ff00f5ff"
                    android:startColor="#ff00ffff" />
            </shape>
        </clip>
    </item>
</layer-list>
