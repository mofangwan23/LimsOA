<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="@dimen/mdp_90"
        android:layout_height="@dimen/mdp_90"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/common_setting_shape"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/mdp_50"
            android:layout_height="@dimen/mdp_50"
            android:src="@drawable/fe_toast_content_icon"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>