<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivEmptyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_110"
        android:layout_marginBottom="@dimen/mdp_16"
        android:src="@mipmap/core_icon_empty_data"/>

    <TextView
        android:id="@+id/tvEmptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mdp_16"
        android:text="这里什么都没有"
        android:textColor="@color/core_default_accent_color"
        android:textSize="@dimen/msp_16"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="@dimen/mdp_130"
        android:layout_height="@dimen/mdp_36"
        android:layout_marginLeft="@dimen/mdp_20"
        android:layout_marginRight="@dimen/mdp_20"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_blue_round_bg"
        android:stateListAnimator="@null"
        android:text="重试"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
</LinearLayout>