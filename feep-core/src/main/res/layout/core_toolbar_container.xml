<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size">

    <ImageView
        android:id="@+id/toolbarNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/mdp_12"
        android:paddingRight="@dimen/mdp_16"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/toolBarLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_8"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/mdp_8"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/msp_16"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/toolBarTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mdp_64"
        android:layout_marginRight="@dimen/mdp_64"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/msp_18"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mdp_8"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolBarRightImageView_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mdp_4"
            android:layout_marginRight="14dp"
            android:src="@mipmap/core_icon_search"
            android:clickable="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/toolBarRightImageView"
            android:layout_width="@dimen/mdp_32"
            android:layout_height="@dimen/mdp_32"
            android:padding="@dimen/mdp_4"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/toolBarRightTextViewleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mdp_8"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="#565656"
            android:textSize="@dimen/msp_16"
            android:visibility="gone" />


        <TextView
            android:id="@+id/toolBarRightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mdp_8"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/msp_16"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mdp_32"
        android:layout_marginRight="@dimen/mdp_8"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/mdp_4"
        android:paddingRight="@dimen/mdp_4"
        android:background="@drawable/btn_blue_round_bg"
        android:minWidth="@dimen/mdp_46"
        android:stateListAnimator="@null"
        android:text="@string/core_btn_positive"
        android:textColor="@android:color/white"
        android:textSize="@dimen/msp_12"
        android:visibility="gone"/>

    <View
        android:id="@+id/toolBarLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdp_0_2"
        android:layout_alignParentBottom="true"
        android:background="@color/standard_line_g_50"/>
</RelativeLayout>
