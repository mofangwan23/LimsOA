<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mdp_16"
        android:paddingLeft="@dimen/mdp_20"
        android:paddingRight="@dimen/mdp_20"
        android:paddingTop="@dimen/mdp_20"
        android:textColor="@android:color/black"
        android:textSize="@dimen/msp_20"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/mdp_20"
        android:paddingRight="@dimen/mdp_20"
        android:textColor="#444444"
        android:textSize="@dimen/msp_16"
        />

    <RelativeLayout
        android:id="@+id/llBottomOperateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mdp_16"
        android:paddingBottom="@dimen/mdp_16"
        android:paddingLeft="@dimen/mdp_10"
        android:paddingRight="@dimen/mdp_10"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvConfirm"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/mdp_8"
            android:paddingLeft="@dimen/mdp_10"
            android:paddingRight="@dimen/mdp_10"
            android:paddingTop="@dimen/mdp_8"
            android:textColor="#FF4081"
            android:textSize="@dimen/mdp_16"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/mdp_12"
            android:layout_marginRight="@dimen/mdp_8"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/mdp_8"
            android:paddingLeft="@dimen/mdp_10"
            android:paddingRight="@dimen/mdp_10"
            android:paddingTop="@dimen/mdp_8"
            android:textColor="#28B9FF"
            android:textSize="@dimen/mdp_16"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
